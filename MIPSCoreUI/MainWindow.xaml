<Window x:Class="MIPSCoreUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:System;assembly=mscorlib"
        xmlns:BaseObjects="clr-namespace:MIPSCoreUI.BaseObjects"
        xmlns:View="clr-namespace:MIPSCoreUI.View"
        Title="MainWindow" Height="750" Width="1550"  
    WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <Menu Width="Auto" Height="20">
                <MenuItem Header="Core">
                    <MenuItem Header="Load File" HorizontalAlignment="Left" Command="{Binding LoadFile}"/>
                </MenuItem>
                <MenuItem Header="Register">
                    <MenuItem Header="View">
                        <MenuItem Header="Hexadecimal" HorizontalAlignment="Left" Command="{Binding ViewRegisterHex}"/>
                        <MenuItem Header="SignedDecimal" HorizontalAlignment="Left" Command="{Binding ViewRegisterSignedDecimal}"/>
                        <MenuItem  Header="UnsignedDecimal" HorizontalAlignment="Left" Command="{Binding ViewRegisterUnsignedDecimal}"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem x:Name="About" Header="&amp;About" HorizontalAlignment="Left"/>
                </MenuItem>
            </Menu>
        </StackPanel>

        <View:MIPSCore Margin="340,195,264,36"/>
        <View:MIPSRegister Margin="1312,31,10,10"/>
        <View:MIPSMemory Margin="0,31,1245,36"/>

        <Button Content="Clock" HorizontalAlignment="Left" Margin="604,51,0,0" VerticalAlignment="Top" Width="76" Command="{Binding Clock}"/>

        <GroupBox Header="Executed Instruction" HorizontalAlignment="Left" Margin="330,31,0,0" VerticalAlignment="Top" MinWidth="250">
            <StackPanel>
                <DockPanel>
                    <Label Content="Name:" Width="60"/>
                    <TextBox Name="TextboxInstructionMemory" Text="{Binding ExecutedInstructionName}" Height="22" HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Example:" Width="60"/>
                    <TextBox Text="{Binding ExecutedInstructionExample}" Height="22" HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Meaning:" Width="60"/>
                    <TextBox Text="{Binding ExecutedInstructionMeaning}" Height="22" HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Format:" Width="60"/>
                    <TextBox Text="{Binding ExecutedInstructionFormat}" Height="22" HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Function:" Width="60"/>
                    <TextBox Text="{Binding ExecutedInstructionFunction}" Height="22" HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="OpCode:" Width="60"/>
                    <TextBox Text="{Binding ExecutedInstructionOpCode}" Height="22" HorizontalAlignment="Stretch"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
    </Grid>

</Window>
